<h3>
<%= @note.title %>
<p><small><%= @note.plane.name %>. Status <%= @note.state.upcase %>. Created on <%= @note.created_at %></small></p>
</h3>

<table class='table table-hover table-condensed'>
  <thead>
    <tr>
      <th>Text</th>
      <th>Created</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @note.items.each do |item| %>
      <tr>
        <td><%= item.text %></td>
        <td><%= item.created_at %></td>
        <td><%= link_to 'Edit', edit_note_item_path(@note, item), class: 'btn btn-xs btn-default'  %></td>
        <td><%= link_to 'Destroy', [@note, item], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Item', new_note_item_path(@note), class: 'btn btn-primary' %>
<%= link_to 'Edit Note', edit_note_path(@note), class: 'btn btn-default' %>
<%= link_to 'Back', notes_path, class: 'btn btn-default' %>
