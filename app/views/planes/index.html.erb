<h1>Planes</h1>

<table class='table table-hover table-condensed'>
  <thead>
    <tr>
      <th>a/c type</th>
      <th>Name</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planes.each do |plane| %>
      <tr>
        <td><%= plane.ac_type %></td>
        <td><%= plane.name %></td>
        <td><%= plane.state %></td>
        <td><%= link_to 'Show', plane, class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Edit', edit_plane_path(plane), class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Destroy', plane, class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plane', new_plane_path, class: 'btn btn-primary' %>
