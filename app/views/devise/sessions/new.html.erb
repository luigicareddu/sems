
<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin"}) do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>
  <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "email" %>
  <%= f.password_field :password, autocomplete: "off", hide_label: true, placeholder: "password" %>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox">
      <%= f.check_box :remember_me, hide_label: true %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<h3></h3>
<%= render "devise/shared/links" %>

<% end %>

