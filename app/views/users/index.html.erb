<h1>Listing users</h1>

<table class='table table-hover table-condensed'>
  <thead>
    <tr>
      <th>name</th>
      <th>email</th>
      <th>role</th>
      <th colspan='3'></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name.titleize %></td>
        <td><%= user.email %></td>
        <td><span class='label label-default'><%= user.role.upcase %></span></td>
        <td><%= link_to 'Details', user, class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-xs btn-default' %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>